package battle;

import java.time.LocalDateTime;

/**
 * Concrete implementation of a {@link LogEntry} that requires an enumerated
 * Team value of the team to achieve victory in battle. Overrides the {@link
 * #toString() toString} method so as to describe the event in a user readable
 * manner.
 * @author Andrew M. Teller(https://github.com/AndrewMiTe)
 */
public class TeamVictoryEntry extends LogEntry {
  
  /**
   * Enumerated team value that achieved victory.
   */
  private final Team team;
  
  /**
   * Initiates the entry with the time of the skill execution and the enumerated
   * team value of the team that achieved victory. Deep copies of the all
   * objects are made to preserve the information they contained at the time of
   * the event.
   * @param timeStamp time of the skill execution event.
   * @param team the team that achieved victory.
   */
  public TeamVictoryEntry(LocalDateTime timeStamp, Team team) {
    super(timeStamp);
    this.team = team;
  }

  /**
   * @return enumerated Team value of the team to achieve victory.
   */
  public Team getWinningTeam() {
    return this.team;
  }

  /**
   * {@inheritDoc}
   */
  @Override
  public String toString() {
    return "@" + getTimeStamp() + " " + team.toString() + " team is "
        + "Victorious!";
  }
  
}
