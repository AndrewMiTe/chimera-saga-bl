package battle;

import java.time.LocalDateTime;

/**
 * Concrete implementation of a {@link LogEntry} that requires the {@link Unit}
 * object and {@link Skill} object to initiate and describe an event where the
 * skill was executed by the unit. Overrides the {@link #toString() toString}
 * method so as to describe the event in a user readable manner.
 * @author Andrew M. Teller
 */
public class ExecutedSkillEntry extends LogEntry {
  
  /**
   * Copy of Unit object who executed the skill.
   */
  private final Unit unit;
  
  /**
   * Copy of Skill object that was executed.
   */
  private final Skill skill;
  
  /**
   * Initiates the entry with the time of the skill execution, the {@link Unit}
   * object that executed the skill, and the {@link Skill} object that was
   * executed. Deep copies of the Unit and Skill objects are made to preserve
   * the information they contained at the time of the event.
   * @param timeStamp time of the skill execution event.
   * @param unit Unit object executing the skill.
   * @param skill Skill object that was executed.
   */
  public ExecutedSkillEntry(LocalDateTime timeStamp, Unit unit, Skill skill ) {
    super(timeStamp);
    this.unit = new Unit(unit);
    this.skill = new Skill(skill);
  }

  /**
   * @return a copy of the Unit object who executed the skill.
   */
  public Unit getExecutingUnit() {
    return this.unit;
  }

  /**
   * @return a copy of the Skill object that was executed.
   */
  public Skill getExecutedSkill() {
    return this.skill;
  }
  
  /**
   * {@inheritDoc}
   */
  @Override
  public String toString() {
    return "@" + getTimeStamp() + " " + unit.getName() + " executed the " +
        skill.getName() + " skill.";
  }
  
}
